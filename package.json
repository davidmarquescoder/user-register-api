{
  "name": "setup_nodejs",
  "version": "1.0.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/shared/core/server.js",
    "start:dev": "nodemon --watch 'src/' --exec ts-node-dev -r tsconfig-paths/register --inspect --ignore-watch node_module src/shared/core/server.ts -e ts",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:staged": "jest --findRelatedTests",
    "test:push": "jest --coverage",
    "git:del-last-commit": "git reset HEAD~1",
    "prisma:generate": "npx prisma generate --schema=./src/shared/infra/database/prisma/schema.prisma",
    "prisma:migrate": "npx prisma migrate dev --schema=./src/shared/infra/database/prisma/schema.prisma"
  },
  "keywords": [],
  "author": "David Marques",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.1.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "git-commit-msg-linter": "^5.0.7",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.7.1"
  },
  "dependencies": {
    "@prisma/client": "^5.13.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.13.0",
    "uuid": "^9.0.1"
  }
}
